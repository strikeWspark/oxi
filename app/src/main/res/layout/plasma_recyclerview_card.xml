<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/margin"
    android:layout_marginTop="@dimen/padding"
    android:background="?attr/cardbackground"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oxi_cardplasma_donorName"
            android:textSize="@dimen/cardTitleText"
            android:textColor="?attr/textcolor"
            android:text="Name: Justin Alex"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"/>




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oxi_cardplasma_city"
            android:layout_below="@+id/oxi_cardplasma_donorName"
            android:textSize="@dimen/cardTitleText"
            android:textColor="?attr/textcolor"
            android:text="City: Delhi/-"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/oxi_cardplasma_mobile"
            android:layout_below="@+id/oxi_cardplasma_donorName"
            android:layout_alignParentRight="true"
            android:text="call"
            android:backgroundTint="?attr/buttoncolor"
            app:cornerRadius="@dimen/buttonRadius"
            android:layout_margin="@dimen/margin"
            android:padding="@dimen/padding"/>


    </RelativeLayout>

</androidx.cardview.widget.CardView>